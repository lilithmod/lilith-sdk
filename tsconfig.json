{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "declaration": false,
        "outDir": "./build",
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "strictPropertyInitialization": false,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "src"
    ]
}